
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ViewModels.Product
@model List<GetEditProductViewModel>


<div class="m-auto">

    <a class="btn btn-success" asp-controller="Product" asp-action="Add">New</a>
    <table class="table table-bordered table-hover">

        <thead>
            <tr class="text-center">
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Discount</th>
                <th>Description</th>
                <th>Images</th>
                <th>Settings</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.Name</td>
                    <td>@item.CategoryID</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                    <td>@item.Discount</td>
                    <td>@item.Description</td>
                    <td>
                        @foreach (var image in @item.Images)
                        {
                            <img src="@image" width="100" class="img-fluid" asp-append-version="true" />
                        }
                    </td>
                    <td class="text-center">
                        <a class="btn btn-info" href="~/Product/Edit?id=@item.ID">Edit</a>
                        <a class="btn btn-danger" href="~/Product/delete?id=@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

