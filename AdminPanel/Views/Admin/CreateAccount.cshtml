
@{
    ViewData["Title"] = "CreateAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ViewModels.Customer

@model SignUpViewModel 

<form asp-action="Sigup" asp-controller="Admin"  method="post" class="w-75 m-auto mt-3" enctype="multipart/form-data">
    <table class="w-100">

        <tr>
            <td colspan="2">
                <!-- uploaded pic shown here -->
                <img id="profilePic" src="http://placehold.it/150x150" width="200">

                <input type="file" asp-for="ImageFile" accept="Image/*" id="profileIMG" />
            </td>

        <tr hidden class="text-end">
            <td><label for="UserRole" class="form-label p-1">UserRole  </label></td>
            <td><input type="text" id="UserRole" asp-for="UserRole" value="Admin" name="UserRole" class="form-control"></td>
        </tr>
        <tr class="text-end">
            <td><label for="Firstname" class="form-label p-1">Firstname  </label></td>
            <td><input type="text" id="Firstname" asp-for="Firstname" name="Firstname" class="form-control"></td>
        </tr>
        <tr class="text-end">
            <td><label for="Lastname" class="form-label p-1">Lastname  </label></td>
            <td><input type="text" id="Lastname" asp-for="Lastname" name="Lastname" class="form-control"></td>
        </tr>
        <tr class="text-end">
            <td><label for="Email" class="form-label p-1">Email  </label></td>
            <td><input type="email" id="Email" asp-for="Email" name="Email" class="form-control"></td>
        </tr>
        <tr class="text-end">
            <td><label for="Username" class="form-label p-1">Username  </label></td>
            <td><input type="text" id="Username" asp-for="Username" name="Username" class="form-control"></td>
        </tr>
        <tr class="text-end">
            <td><label for="Password" class="form-label p-1">Password  </label></td>
            <td>
                <input id="password-field" type="password" asp-for="Password" class="form-control" name="password">
                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
            </td>
        </tr>
        <tr class="text-end">
            <td><label for="Address" class="form-label p-1">Address  </label></td>
            <td><input type="text" id="Address" asp-for="Address" name="Address" class="form-control"></td>
        </tr>
        <tr class="text-end">
            <td><label for="Street" class="form-label p-1">Gender  </label></td>
            <td class="text-center">
                <input type="radio" id="Male" name="Gender" asp-for="Gender" checked value="0">
                <label for="Male" class="m-1">Male</label>
                <input type="radio" id="Female" name="Gender" asp-for="Gender" value="1">
                <label for="Female">Female</label>
            </td>
        </tr>
        <tr class="text-end">
            <td><label for="Phone" class="form-label p-1">Phone  </label></td>
            <td><input type="tel" id="Phone" asp-for="Phone" name="Phone" class="form-control"></td>
        </tr>

        <tr class="text-end">
            <td colspan="2" class="text-center">
                <input type="submit" class="btn btn-success m-2" value="Register">
                <input type="reset" class="btn btn-danger m-2" value="Cancel">
            </td>
        </tr>
    </table>
</form>


<script>
    var file = document.getElementById("profileIMG");
    file.onchange = evt => {
        var reader = new FileReader();
        reader.readAsDataURL(file.files[0]);
        reader.onload = evt => {
            document.getElementById("profilePic").src = evt.target.result;
        }
    }
</script>