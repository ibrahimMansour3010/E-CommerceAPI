
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ViewModels.Order
@model IEnumerable<GetOrderViewModelForAdmin>

<div class="m-auto">

    <a class="btn btn-success" asp-controller="Product" asp-action="Add">New</a>
    <table class="table table-bordered table-hover">

        <thead>
            <tr class="text-center">
                <th>ID</th>
                <th>Status</th>
                <th>Date</th>
                <th>Total Price</th>
                <th>CustomerID</th>
                <th>Settings</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.ID</td>
                    <td>@item.Status</td>
                    <td>@item.TotalPrice</td>
                    <td>@item.CustomerID</td>
                    <td class="text-center">
                        <a class="btn btn-info" href="~/Order/Details?id=@item.ID">Details</a>
                        <a class="btn btn-info" href="~/Order/Eidt?id=@item.ID">Edit</a>
                        <a class="btn btn-danger" href="~/Order/delete?id=@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

